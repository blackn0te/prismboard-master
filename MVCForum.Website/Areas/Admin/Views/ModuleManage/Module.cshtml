@using MvcForum.Core.Models.Entities
@model IEnumerable<MvcForum.Core.Models.Entities.Module>

@{
    ViewBag.Title = "Module";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Modules Management</h1>
    </div>
</div>
<br />
<div class="row">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Modules</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        @foreach (var Module in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => Module.ModId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Module.ModName)
                </td>
                <td>
                    <button type="button" class="btn btn-info">Details</button>
                    <button type="button" class="btn btn-warning">Edit</button>
                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteModule", "AdminDashBoard", new { id = Module.ModId})'">Delete</button>
                </td>

            </tr>
        }
    </table>
</div>
<br />
<br />
<div class="row">
    <div class="col-lg-12 text-right">
        <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("NewModule", "ModuleManage")'">Create New Module</button>
    </div>
</div>


