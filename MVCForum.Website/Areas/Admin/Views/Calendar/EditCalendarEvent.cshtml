@model MvcForum.Web.ViewModels.Calendar.CalendarEdit

<link href="../Content/EditCalendarEventCSS.css" rel="stylesheet">

<h3>Edit Events</h3>
@*<button>Click to add event</button>*@
@*<button>Click to delete event</button>*@
<div id="EditEventContainer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();
        <div class="form-group">
            <div class="control-label col-md-4 dd">
                Name of Event:
            </div>
            <br />
            <div class="col-md-9">
                @Html.EditorFor(model => model.EventName, new { htmlAttributes = new { @class = "form-control", type = "text" } })
            </div>
        </div>
        <br /><br /><br />
        <div class="form-group">
            <div class="control-label col-md-3">
                Event type:
            </div>
            <br />
            <div class="col-md-9">
                @{ var tempModel = new MvcForum.Web.ViewModels.Calendar.CalendarEdit(); }
                @Html.DropDownListFor(model => model.EventType, tempModel.EventCodeList, new { @class = "eventTypeIn", id = "eventTypeGetter" })
            </div>
        </div>
        <div class="form-group" id="modulePortion">
            <br /><br />
            <div class="control-label col-md-3">
                Module Id:
            </div>
            <br />
            <div class="col-md-9">
                @Html.EditorFor(model => model.Module, new { htmlAttributes = new { @class = "form-control", id = "moduleIn", placeholder = "e.g. IT2253", maxlength = "6", display = "none" } })
            </div>
        </div>
        <br /><br /><br />
        <div class="form-group">
            <div class="control-label col-md-3 dd">
                Date of event:
            </div>
            <br />
            <div class="col-md-9">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", type = "date" } })
            </div>
        </div>
        <br /><br /><br />
        <div class="form-group">
            <div class="control-label col-md-4 dd">
                Time frame of Event:
            </div>
            <br /><br />
            <div class="col-md-9">
                <p>
                    From:
                </p>
                @Html.EditorFor(model => model.TimeStart, new { htmlAttributes = new { @class = "form-control", type = "time", min = "9.00" } })
                <br />

                <p>
                    To:
                </p>
                @Html.EditorFor(model => model.TimeEnd, new { htmlAttributes = new { @class = "form-control", type = "time", min = "21.30" } })
            </div>
        </div>
        <br /><br /><br /><br /><br /><br /><br /><br />
        <div class="form-group">
            <div class="control-label col-md-3 dd">
                Description:
            </div>
            <br />
            <br />
            <div class="col-md-9">

                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", style = "resize: none; height: 200px; width: 400px;" })
            </div>
        </div>
        <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
        <div class="form-group">
            <div class="inputbuttons col-md-12 ">
                <button id="addEvent" type="submit" class="btn btn-lg btn-primary addBtn">Add</button>
                <input class="btn btn-lg btn-success cancelbtn" type="button" id="cancel" value="Cancel" />
            </div>
        </div>
        <br /><br /><br />
    }
</div>
<script src="../Scripts/EditCalendarEventsJS.js"></script>
