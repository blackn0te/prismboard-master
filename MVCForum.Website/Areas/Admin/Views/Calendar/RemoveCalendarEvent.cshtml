@using MvcForum.Core.Models.Entities
@model IEnumerable<MvcForum.Core.Models.Entities.Event>

@{
    ViewBag.Title = "RemoveCalendarEvent";
}

<div class="row">
    <div class="col-lg-12">
        <h1>Modules Management</h1>
    </div>
</div>
<br />
<div class="row">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">Event Type</th>
                <th scope="col">Event Name</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        @foreach (var EventVal in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(EventIdVal => EventVal.Id.ToString())
                </td>
                <td>
                    @Html.DisplayFor(EventNameVal => EventVal.EventName)
                </td>
                <td>
                    <button type="button" class="btn btn-warning">Edit</button>
                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("DeleteEvent", "Calendar", new { id = EventVal.Id})'">Delete</button>
                </td>

            </tr>
        }
    </table>
</div>
<br />
<br />
<div class="row">
    <div class="col-lg-12 text-right">
        <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("NewModule", new { area = "Admin"})'">Create New Module</button>
    </div>
</div>


